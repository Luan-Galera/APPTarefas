@model AppTarefas.Models.Tarefa
@{
	ViewData["Title"] = "Editar Tarefa";
}

<h1>Editar Tarefa</h1>

<!--method="post" é opicional-->
<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="TarefaId" />
	<div class="form-group">
		<label>Título</label>
		<input asp-for="Titulo" class="form-control" />
	</div>

	<div class="form-group mb-3">
		<label>Descrição</label>
		<textarea asp-for="Descricao" class="form-control"></textarea>
	</div>

	<div class="form-group mb-3">
		<label>Concluida?</label>
		<input type="checkbox" asp-for="Concluida" />
	</div>

	<button type="submit" class="btn btn-success px-3">Salvar</button>

	<a asp-controller="Tarefas" asp-action="Index" class="btn btn-secondary px-3">Voltar</a>

</form>